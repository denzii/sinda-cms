{
  "compilerOptions": {
    "noEmit": true, // Do not compile the JS (or TS) files in this project on build
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "./js" ],
  "exclude": ["../node_modules"]
}
